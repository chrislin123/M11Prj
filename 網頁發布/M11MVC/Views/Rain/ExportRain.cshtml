      //language: 'zh-tw',
    });
    $("#EndDate").datetimepicker({
      format: 'YYYY-MM-DD HH',
      sideBySide: true,
      //預設今天
      //defaultDate: new Date(),
      //language: 'zh-tw',
    });

    

